<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
  <title>Homepage</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <div>
    <form action="/blog" method="post" enctype="multipart/form-data">
      <div class="mb-3 mt-4">
        <label for="coverImage" class="form-label">CoverImageURL</label>
        <input type="file" name="coverImage" class="form-control border-black" id="coverImage">
      </div>
      <div class="mb-3 mt-4">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" class="form-control border-black" id="title" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Body</label>
        <textarea name="body" class="form-control border-black" id="body"></textarea>
      </div>
      <div class="mb-3">
         <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <%- include('./partials/script') %>
</body>
</html>